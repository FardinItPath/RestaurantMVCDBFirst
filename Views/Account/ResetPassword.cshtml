@model RestaurantMVCCodeFirst.View_Model.ResetPasswordViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-6">
        <div class="card shadow-lg p-4 w-100">
            <h2 class="text-center mb-4 text-primary">Reset Password</h2>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center">@TempData["Error"]</div>
            }

            <form asp-action="ResetPassword" method="post">
                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label fw-bold">New Password</label>
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter new password" required />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter new password" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">Reset Password</button>

                <div class="text-center mt-3">
                    <p class="text-muted">Back to <a asp-action="Login" class="text-decoration-none fw-bold">Login</a></p>
                </div>
            </form>
        </div>
    </div>
</div>
